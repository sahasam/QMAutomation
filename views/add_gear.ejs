                  <tr>
                    <td class="label">Item Status</td><td>: <input type="text" name="item_status" required></td>
                 </tr>
                 <tr>
                   <td class="label">Last User</td><td>: <input type="text" name="last_user" required></td>
                </tr>
                 <tr>
                    <td class="label"></td>
